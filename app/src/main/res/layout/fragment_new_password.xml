<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.views.NewPasswordFragment">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="326dp"
        android:layout_height="483dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/forgot_password_screen_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Контейнер формы входа -->
    <LinearLayout
        android:id="@+id/loginContainer"
        android:layout_width="match_parent"
        android:layout_height="382dp"
        android:background="@drawable/login_container_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Заголовок -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Восстановление пароля"
            android:textColor="@color/dark_blue"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Введите почту привязанную к вашему \nличному кабинету"
            android:textColor="#373737" />

        <!-- Поле ввода Email -->
        <EditText
            android:id="@+id/new_password_input"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@drawable/input_field_bg"
            android:hint="Новый пароль"
            android:padding="12dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/repeat_password_input"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@drawable/input_field_bg"
            android:hint="Повторить пароль"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Кнопка Войти -->
        <Button
            android:id="@+id/send_button"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/dark_blue"
            android:text="Отправить"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>