<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC5C9"
    android:orientation="vertical"
    tools:context=".presentation.views.NoConnectionFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="47dp"
        android:layout_weight="0"

        android:src="@drawable/no_connection_screen_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="338dp"
        android:layout_height="126dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="47dp"
        android:layout_weight="0"
        android:textSize="32sp"
        android:textColor="#BD4C4C"
        android:gravity="center_horizontal"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:text="@string/no_connection_txt" />

    <TextView
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:text="Убедитесь, что Wi-Fi или сотовая связь включены, а затем повторите попытку "
        android:fontFamily="@font/montserrat"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:textSize="16sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Попробуйте ещё раз"
        android:background="#BD4C4C">

    </Button>
</LinearLayout>