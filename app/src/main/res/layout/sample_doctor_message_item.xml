<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctor_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="8dp"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/doctor_ic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_doctor_message"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/doctor_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="253dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Спасибо за информацию..."
                android:textColor="#5F6B78"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/doctor_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:text="13:46"
                android:fontFamily="@font/montserrat"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>